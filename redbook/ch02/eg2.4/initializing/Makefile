# Reference:
# Shreiner, D., et. al., "OpenGL Programming Guide, 8th Ed.", (c) 2013 Pearson Education, Inc.

linux:
	# -w to suppress warnings generated by void index (GLvoid *buffer) in pointer arithmetic
	g++ -w initializing.c LoadShaders.cpp -lGLEW -lGL -lglut -o initializing

debug:
	g++ -g initializing.c LoadShaders.cpp -lGLEW -lGL -lglut -o initializing

clean:
	rm -rf *~
	rm -rf *~
	rm -rf initializing

